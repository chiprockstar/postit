<%= render 'shared/content_title', title: "Profile #{@user.username}" %>

<div class='well'>
  <%= render 'shared/errors', obj: @user %>
  <dl class="dl-horizontal">
    <dt> Username:</dt>
    <dd><%= @user.username %></dd>
    <dt> Time zone:</dt>
    <dd><%= @user.time_zone %></dd>
  </dl>
</div>


<h5><%= @user.username %>'s Activity</h5>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Posts (#{@user.posts.size})", user_path(@user) %>
  </li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>

<% if params[:tab].nil? %>
  <% @user.posts.each do |post| %>
  </br>
  <div class="row">
    <div id="notice_<%= post.slug %>" class='span6' style="display:none">
        <%= render :partial => 'layouts/messages' , :locals => { :flash => flash } %>
    </div>
    <div class="span6"></div>
  </div>
  </br>
  
    <%= render 'posts/post', post: post %>
  <% end %>

<% elsif params[:tab] == 'comments' %>
  <% @user.comments.each do |comment| %>
  </br>
  <div class="row">
    <div id="notice_<%= comment.id %>" class='span6' style="display:none">
        <%= render :partial => 'layouts/messages' , :locals => { :flash => flash } %>
    </div>
    <div class="span6"></div>
  </div>
    <%= render 'comments/comment', comment: comment, show_post: true %>
  <% end %>
<% end %>