<%= render 'shared/content_title', title: 'All Categories' %>


<% @categories.each do |category| %>
  <div class="row">
    <div class="span8 well">
      <%#= render category.name %>
      <h4><%= link_to category.name, category_path(category) %></h4>
      <p><%= category.name %></p>
      <small>
        <span>
          <%= link_to("Categories", category_path(category)) %>
        </span>
      </small>
    </div>
  </div>
<% end %>